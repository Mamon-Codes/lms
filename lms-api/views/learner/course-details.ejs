                        <form method="POST" action="/learner/course/<%= course.id %>/purchase" id="purchaseForm">
                            <div class="mb-4">
                                <label class="block text-gray-700 font-semibold mb-2">Bank Account Secret</label>
                                <input type="password" name="secret" required
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-purple-500"
                                    placeholder="Enter your account secret">
                                <p class="text-xs text-gray-500 mt-1">Required to authorize payment</p>
                            </div>

                            <button type="submit"
